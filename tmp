# RUN sql_script="CREATE DATABASE '$MYSQL_DATABASE';CREATE USER '$MYSQL_USER'@'%' IDENTIFIED BY '$MYSQL_PASSWORD';GRANT ALL ON $MYSQL_DATABASE.* TO '$MYSQL_USER'@'%';USE '$MYSQL_DATABASE';CREATE TABLE test;EXIT;\"

RUN <<EOT
  sql_script="\
  CREATE DATABASE '$MYSQL_DATABASE'\
  CREATE USER '$MYSQL_USER'@'%' IDENTIFIED BY '$MYSQL_PASSWORD';\
  GRANT ALL ON $MYSQL_DATABASE.* TO '$MYSQL_USER'@'%';\
